<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Inbox:</h3>
  </div>
  <div class="panel-body">
    <table class="table table-hover ">
      <thead>
        <tr>
          <th>Subject</th>
          <th>From</th>
        </tr>
      </thead>
      <tbody>
        {{#each email in controller}}
          {{#link-to 'email' email tagName="tr"}}
              <td>{{email.subject}}</td>
              <td>{{email.from}}</td>
          {{/link-to}}
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
{{#if emailForm}}
<button {{action 'toggleEmailForm'}} class="btn btn-default">
  Hide Form
</button>
<br>
<br>
<div class="panel panel-danger">
  <div class="panel-heading">
    <h4 class="panel-title">New Email</h4>
  </div>
  <form class="well">
    <div class="form-group">
      <label class="col-sm-1">To</label>
      <div class="col-sm-5">
        {{input value=from class="form-control"}}
      </div>
      <label class="col-sm-1">From</label>
      <div class="col-sm-5">
        {{input value=to class="form-control"}}
      </div>
    </div>
    <br>
    <br>
    <div class="form-group">
      <label class="col-sm-1">Subject</label>
      <div class="col-sm-11">
        {{input value=subject class="form-control"}}
      </div>
    </div>
    <br>
    <br>
    <div class="form-group">
      <label class="col-sm-1">Text</label>
      <div class="col-sm-11">
        {{textarea value=body class="form-control" rows="4" columns="80"}}
      </div>
    </div>
    <button {{action 'emailAdd'}} class="btn btn-primary">
      Send
    </button>
    <br>
  </form>
</div>
{{else}}
<button {{action 'toggleEmailForm'}} class="btn btn-warning">
  New Email
</button>
{{/if}}
