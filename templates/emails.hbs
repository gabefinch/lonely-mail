<div class="page-header">
  <h3>Inbox:</h3>
</div>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>#</th>
      <th>Subject</th>
      <th>From</th>
    </tr>
  </thead>
  <tbody>
    {{#each email in controller}}
      <tr {{action 'loadEmail' email}}>
        <td>{{_view.contentIndex}} + 1</td>
        <td>{{email.subject}}</td>
        <td>{{email.from}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>

<button {{action 'toggleEmailForm'}} class="btn btn-success">
  New Email
</button>

{{#if emailForm}}
<form class="well">
  <div class="form-group">
    <label>To:
      {{input value=from class="form-control"}}
    </label>
    <label>From:
      {{input value=to class="form-control"}}
    </label>
    <label>Subject:
      {{input value=subject class="form-control"}}
    </label>
    <label>Text:
      {{textarea value=body class="form-control" rows="4" columns="80"}}
    </label>
  </div>
  <button {{action 'emailAdd'}} class="btn btn-danger">
    Send
  </button>
</form>
{{/if}}
